
<div class="release release-tnoos">
	{{!-- <img class="release__cover" src="/images/tnoos-cover.jpg" /> --}}
	<div class="release__details">
		<h2 class="release__title">Time's Not on Our Side EP <small>(2014)</small></h2>

		<a class="release__download" href="https://shaunchurch.bandcamp.com">Download</a>

	</div>


	<iframe width="100%" height="400" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/playlists/54870990&amp;color=ff5500&amp;auto_play=false&amp;hide_related=false&amp;show_comments=true&amp;show_user=true&amp;show_reposts=false"></iframe>
</div>

<div class="section">
	<h2>Upcoming Gigs</h2>
	{{#if gigs}}
		{{#each gigs}}
			<div class="gig">
				<span class="gig__datetime">
					<span class="gig__date">{{date}}</span>
					<span class="gig__time">{{time}}</span>
				</span>
				<span class="gig__location">{{location}} <a href="{{link}}">&raquo;</a></span>
			</div>
		{{/each}}
	{{else}}
		Nothing planned. Maybe soon :)
	{{/if}}
</div>

<div class="section">
	<h2>Previous Gigs</h2>
	{{#if previous_gigs}}
		{{#each previous_gigs}}
			<div class="gig gig--previous">
				<span class="gig__datetime">
					<span class="gig__date">{{date}}</span>
					<span class="gig__time">{{time}}</span>
				</span>
				<span class="gig__location">{{location}} <a href="{{link}}">&raquo;</a></span>
			</div>
		{{/each}}
	{{else}}
		Nothing planned. Maybe soon :)
	{{/if}}
</div>